{
  "name": "news-sanitizer",
  "version": "0.1.0",
  "description": "Sanitize news title and body",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "pretest": "npm run clean && npm run tsc",
    "test": "ava --no-cache --verbose lib/**/*.test.js",
    "posttest": "npm run clean-test-code",
    "tsc": "tsc",
    "tscw": "tsc -w",
    "preversion": "npm run tsc",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run tsc && npm run clean-test-code",
    "clean": "rimraf ./lib",
    "clean-test-code": "rimraf ./lib/**/*.test.js",
    "normalize": "node ./lib/scripts/normalize-titles.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ournet/news-sanitizer.git"
  },
  "keywords": [
    "news-sanitizer",
    "sanitizer",
    "news"
  ],
  "author": "Dumitru Cantea",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ournet/news-sanitizer/issues"
  },
  "homepage": "https://github.com/ournet/news-sanitizer#readme",
  "devDependencies": {
    "@types/node": "latest",
    "ava": "^0.23.0",
    "rimraf": "^2.6.2",
    "typescript": "latest"
  }
}